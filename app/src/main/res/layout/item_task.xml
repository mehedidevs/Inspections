<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_spacing">

    <TextView
        android:id="@+id/txt_task_title"
        style="@style/txt_style_sub_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/medium_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginVertical="@dimen/small_spacing"
        android:contentDescription="@string/rating_button"
        android:src="@drawable/ic_info"
        app:layout_constraintStart_toStartOf="@id/txt_task_title"
        app:layout_constraintTop_toBottomOf="@id/txt_task_title" />


    <TextView
        android:id="@+id/txt_star_count"
        style="@style/txt_style_sub_title"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="@dimen/small_spacing"
        android:gravity="center_vertical"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/img_star"
        app:layout_constraintTop_toBottomOf="@id/txt_task_title"
        app:layout_constraintTop_toTopOf="@id/img_star" />


    <ImageView
        android:id="@+id/img_attach"
        android:layout_width="18dp"
        android:layout_height="18dp"

        android:contentDescription="@string/rating_button"
        android:src="@drawable/ic_info"
        app:layout_constraintStart_toEndOf="@id/txt_star_count"
        app:layout_constraintTop_toTopOf="@id/img_star" />


    <TextView
        android:id="@+id/txt_attach_count"
        style="@style/txt_style_sub_title"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="@dimen/small_spacing"
        android:gravity="center_vertical"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/img_attach"
        app:layout_constraintStart_toEndOf="@id/img_attach"
        app:layout_constraintTop_toTopOf="@id/img_attach" />

    <ImageView
        android:id="@+id/img_comments"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:contentDescription="@string/rating_button"
        android:src="@drawable/ic_info"
        app:layout_constraintStart_toEndOf="@id/txt_attach_count"
        app:layout_constraintTop_toTopOf="@+id/img_star" />


    <TextView
        android:id="@+id/txt_comments_count"
        style="@style/txt_style_sub_title"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="@dimen/small_spacing"
        android:gravity="center_vertical"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/img_comments"
        app:layout_constraintStart_toEndOf="@id/img_comments"
        app:layout_constraintTop_toTopOf="@id/img_comments" />


</androidx.constraintlayout.widget.ConstraintLayout>